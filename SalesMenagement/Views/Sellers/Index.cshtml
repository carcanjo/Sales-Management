@model IEnumerable<SalesMenagement.Models.Seller>

@{
    ViewData["Title"] = "Sellers";
}

    <h2><i class="far fa-address-card"></i> Sellers</h2>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="fas fa-spell-check"></i>  Create New Seller</a>
</p>
<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BaseSalary)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="far fa-edit"></i> Edit &nbsp;</a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="far fa-paper-plane"></i> Details&nbsp;</a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="far fa-trash-alt"></i> Delete&nbsp;</a>
                </td>
            </tr>
        }
    </tbody>
</table>
