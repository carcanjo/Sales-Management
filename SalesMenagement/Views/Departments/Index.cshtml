@model IEnumerable<SalesMenagement.Models.Departments>

@{
    ViewData["Title"] = "Index";
}


<h2><i class="fas fa-asterisk"></i> Departments</h2>
<p>
    <a asp-action="Create" class="btn btn-success btn-group-lg"><i class="fas fa-spell-check"></i> Novo Departamento</a>
</p>
<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr  class="success">
            <th>
                @Html.DisplayNameFor(model => model.NameDepartaments)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NameDepartaments)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="far fa-edit"></i> Editar</a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm"><i class="far fa-paper-plane"></i> Detalhes</a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="far fa-trash-alt"></i> Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
